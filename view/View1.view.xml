	xmlns:m="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:core="sap.ui.core" xmlns:vm="sap.ui.comp.variants"
	xmlns:fo="sap.ui.layout.form" xmlns:l="sap.ui.layout" displayBlock=" true">
	<!--<Shell id="shell">-->
	<m:App id="app">
		<m:pages>
			<m:Page id="page" title="{i18n>title}" titleLevel="H1" >
				<m:content>
					<fb:FilterBar id="filterbar" reset="onReset" search="onShow" clear="onClear" showRestoreButton="true" showClearButton="true">
						<fb:filterGroupItems>
							<fb:FilterGroupItem groupName="__$INTERNAL$" mandatory="true" name="E" label="Creation Date" partOfCurrentVariant="true"
								visibleInFilterBar="true">
								<fb:control>
									<m:DateRangeSelection id="DRS3" change="handleChange" width="100%"/>
								</fb:control>
							</fb:FilterGroupItem>
						</fb:filterGroupItems>
						<fb:filterGroupItems>
							<fb:FilterGroupItem groupName="__$INTERNAL$" mandatory="true" name="X" label="Plant " partOfCurrentVariant="true" visibleInFilterBar="true">
								<fb:control>
									<m:ComboBox items="{ path: '/pList' }" id="mb" change="funcA" placeholder="Plant">
										<core:Item key="{Plant}" text="{Plant}"/>
									</m:ComboBox>
								</fb:control>
							</fb:FilterGroupItem>
						</fb:filterGroupItems>
					</fb:FilterBar>
					<m:FlexBox height="40px" alignItems="End" justifyContent="End">
						<m:items>
							<m:Button icon="sap-icon://chain-link" id="button1" text="Manage Pur. Req." press="onOpen"/>
							<m:Button xmlns="sap.m" text="Download Excel" id="button2" press="onDataExport" icon="sap-icon://download-from-cloud"/>
						</m:items>
					</m:FlexBox>
					<table:Table id="tab" selectionMode="None" visibleRowCount="200" ariaLabelledBy="title" enableGrouping="true" rows="{MRP>/finalList}"
						enableBusyIndicator="true" alternateRowColors="true">
						<table:columns>
							<table:Column sortProperty="SourceMRPElement" filterProperty="SourceMRPElement" autoResizable="true" width="12rem">
								<m:Label text="Purchase Requisition"/>
								<table:template>
									<m:Text text="{MRP>SourceMRPElement}" wrapping="false"/>
								</table:template>
							</table:Column>
							<table:Column sortProperty="SourceMRPElementItem" filterProperty="SourceMRPElementItem" autoResizable="true" width="8rem">
								<m:Label text="Item"/>
								<table:template>
									<m:Text text="{MRP>SourceMRPElementItem}" wrapping="false"/>
								</table:template>
							</table:Column>
							<table:Column sortProperty="MRPPlant" filterProperty="MRPPlant" autoResizable="true" width="8rem">
								<m:Label text="Plant"/>
								<table:template>
									<m:Text text="{MRP>MRPPlant}" wrapping="false"/>
								</table:template>
							</table:Column>
							<table:Column sortProperty="Material" filterProperty="Material" autoResizable="true" width="8rem">
								<m:Label text="Material"/>
								<table:template>
									<m:Text text="{MRP>Material}" wrapping="false"/>
								</table:template>
							</table:Column>
							<table:Column sortProperty="FixedSupplier" filterProperty="FixedSupplier" autoResizable="true" width="8rem">
								<m:Label text="Supplier"/>
								<table:template>
									<m:Text text="{MRP>FixedSupplier}" wrapping="false"/>
								</table:template>
							</table:Column>
							<table:Column sortProperty="DeliveryDate" filterProperty="DeliveryDate" autoResizable="true" width="10rem">
								<m:Label text="Delivery Date"/>
								<table:template>
									<m:Text text="{MRP>DeliveryDate}" wrapping="false"/>
								</table:template>
							</table:Column>
							<table:Column sortProperty="ExceptionMessageText" filterProperty="ExceptionMessageText" autoResizable="true" width="14rem">
								<m:Label text="Actual Need Date"/>
								<table:template>
									<!--<Text text="{ path: '/navList>MRPElementAvailyOrRqmtDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd:MM:yyyy', UTC: true } }"/>-->
									<m:Text text="{MRP>ExceptionMessageText}" wrapping="false"/>
								</table:template>
							</table:Column>
							<table:Column sortProperty="RequestedDeliveryDate" filterProperty="RequestedDeliveryDate" autoResizable="true" width="12rem">
								<m:Label text="Requested Delivery Date"/>
								<table:template>
									<m:Text text="{MRP>RequestedDeliveryDate}" wrapping="false"/>
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
				</m:content>
			</m:Page>
		</m:pages>
	</m:App>
